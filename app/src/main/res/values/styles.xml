<resources>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="background">@color/colorPrimary</item>
        <item name="iconTint">@android:color/white</item>
        <item name="iconTintMode">src_atop</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="iconTint">@android:color/white</item>
        <item name="iconTintMode">src_atop</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="AppTheme.AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

</resources>
